<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/background">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <androidx.cardview.widget.CardView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/avatar"
            android:layout_marginTop="15dp"
            android:layout_centerHorizontal="true"
            app:cardCornerRadius="250dp"
            app:cardBackgroundColor="@color/avatarBg">



            <androidx.cardview.widget.CardView
                android:layout_width="115dp"
                android:layout_height="115dp"
                app:cardCornerRadius="250dp"
                android:layout_gravity="center">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/avatar"
                    android:id="@+id/avatarImg"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"/>

            </androidx.cardview.widget.CardView>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/welcomeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito"
            android:text="Good TIME_PERIOD, USERNAME."
            android:layout_below="@+id/avatar"
            android:textColor="@color/white"
            android:textSize="27dp"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            ></TextView>

        <TextView
            android:id="@+id/feelingText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito"
            android:text="How are you feeling today?"
            android:layout_below="@+id/welcomeText"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="35dp"
            ></TextView>

        <LinearLayout
            android:layout_width="360dp"
            android:layout_height="90dp"
            android:background="@drawable/even_simpler_containter"
            android:layout_below="@id/feelingText"
            android:id="@+id/moodBox"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <RelativeLayout
                android:id="@+id/button1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/on_select_even_simpler_containter"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/pngwing1"></ImageView>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/button2"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/on_select_even_simpler_containter"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/pngwing2"></ImageView>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/button3"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/on_select_even_simpler_containter"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/pngwing3"></ImageView>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/button4"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/on_select_even_simpler_containter"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/pngwing4"></ImageView>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/button5"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/on_select_even_simpler_containter"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/pngwing5"></ImageView>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="360dp"
            android:layout_height="40dp"
            android:layout_below="@+id/moodBox"
            android:id="@+id/textMoodBox"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/textMood1"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:text="Awful"
                android:gravity="center_horizontal"
                android:textColor="@color/white"
                android:fontFamily="@font/nunito"
                android:textSize="15dp"></TextView>
            <TextView
                android:id="@+id/textMood2"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:text="Sad"
                android:gravity="center_horizontal"
                android:textColor="@color/white"
                android:fontFamily="@font/nunito"
                android:textSize="15dp"></TextView>
            <TextView
                android:id="@+id/textMood3"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:text="Neutral"
                android:gravity="center_horizontal"
                android:textColor="@color/white"
                android:fontFamily="@font/nunito"
                android:textSize="15dp"></TextView>
            <TextView
                android:id="@+id/textMood4"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:text="Happy"
                android:gravity="center_horizontal"
                android:textColor="@color/white"
                android:fontFamily="@font/nunito"
                android:textSize="15dp"></TextView>
            <TextView
                android:id="@+id/textMood5"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:text="Ecstatic"
                android:gravity="center_horizontal"
                android:textColor="@color/white"
                android:fontFamily="@font/nunito"
                android:textSize="15dp"></TextView>
        </LinearLayout>

        <TextView
            android:id="@+id/moodChooseState"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_below="@id/textMoodBox"
            android:text="MOOD_CHOOSE_STATE"
            android:gravity="center"
            android:textSize="20dp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/secondaryText"
            android:fontFamily="@font/nunito"></TextView>

        <LinearLayout
            android:layout_width="360dp"
            android:layout_height="400dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/simple_container"
            android:layout_below="@+id/textMoodBox"
            android:orientation="vertical"
            android:id="@+id/graphBox"
            android:layout_marginTop="50dp">
            <TextView
                android:id="@+id/mainTextGraph"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Mood tracking"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/white"
                android:fontFamily="@font/nunito"
                android:textSize="25dp"></TextView>

            <TextView
                android:id="@+id/secondaryTextGraph"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="22 April - 29 April"
                android:layout_marginTop="5dp"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/secondaryText"
                android:fontFamily="@font/nunito"
                android:textSize="20dp"></TextView>

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/chart1"
                android:layout_width="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_height="match_parent" />
        </LinearLayout>


    </RelativeLayout>
</ScrollView>
